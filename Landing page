    <!-- Custom Message Modal -->
    <div id="customModal" class="modal-overlay hidden">
        <div class="modal-content">
            <p id="modalMessage"></p>
            <button id="modalCloseBtn">OK</button>
        </div>
    </div>

    <script>
        // Function to show custom modal
        function showCustomModal(message) {
            document.getElementById('modalMessage').textContent = message;
            document.getElementById('customModal').classList.remove('hidden');
        }

        // Function to hide custom modal
        document.getElementById('modalCloseBtn').addEventListener('click', () => {
            document.getElementById('customModal').classList.add('hidden');
        });

        document.getElementById('generateMessageBtn').addEventListener('click', async () => {
            const purposeInput = document.getElementById('purposeInput').value;
            const generatedMessageOutput = document.getElementById('generatedMessage');
            const messageOutputContainer = document.getElementById('messageOutputContainer');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const buttonText = document.getElementById('buttonText');

            if (!purposeInput.trim()) {
                showCustomModal('Please enter your purpose for contacting Mishelle.');
                return;
            }

            // Show loading spinner and disable button
            buttonText.textContent = 'Generating...';
            loadingSpinner.classList.remove('hidden');
            document.getElementById('generateMessageBtn').disabled = true;
            generatedMessageOutput.value = ''; // Clear previous message
            messageOutputContainer.classList.add('hidden'); // Hide output container

            // Extract relevant information from the page
            const name = "Mishelle de León";
            const title = "PR Manager LatAm and Africa | Events and Communication";
            const aboutMe = document.querySelector('section.mb-10.text-center p').textContent;
            const skills = Array.from(document.querySelectorAll('section.mb-10 div.flex.flex-wrap.justify-center span')).map(span => span.textContent).join(', ');
            const experienceElements = document.querySelectorAll('section.mb-10:nth-of-type(3) > div > div');
            let experience = '';
            experienceElements.forEach(el => {
                const jobTitle = el.querySelector('h3').textContent;
                const company = el.querySelector('p:nth-of-type(1)').textContent;
                const duration = el.querySelector('p:nth-of-type(2)').textContent;
                const location = el.querySelector('p:nth-of-type(3)').textContent;
                experience += `- ${jobTitle} at ${company} (${duration}, ${location}).\n`;
            });

            const educationElements = document.querySelectorAll('section.mb-10:nth-of-type(4) > div > div');
            let education = '';
            educationElements.forEach(el => {
                const degree = el.querySelector('h3').textContent;
                const university = el.querySelector('p:nth-of-type(1)').textContent;
                const duration = el.querySelector('p:nth-of-type(2)').textContent;
                education += `- ${degree} from ${university} (${duration}).\n`;
            });

            const profileInfo = `
                Name: ${name}
                Title: ${title}
                About: ${aboutMe}
                Skills: ${skills}
                Experience:\n${experience}
                Education:\n${education}
            `;

            const prompt = `Based on the following professional profile, draft a concise and professional message for someone contacting Mishelle de León with the purpose: "${purposeInput}".
            
            Mishelle's Profile:
            ${profileInfo}

            The message should be polite, directly address the purpose, and suggest a clear next step (e.g., "I'd be happy to connect further" or "Please let me know if you're available for a brief chat"). Keep it under 150 words. Start with "Dear Mishelle,".`;

            let chatHistory = [];
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });

            const payload = { contents: chatHistory };
            const apiKey = ""; // Canvas will automatically provide the API key
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    console.error('API Error:', errorData);
                    throw new Error(`API request failed with status ${response.status}: ${errorData.error.message}`);
                }

                const result = await response.json();
                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    generatedMessageOutput.value = text;
                    messageOutputContainer.classList.remove('hidden');
                } else {
                    generatedMessageOutput.value = 'Could not generate message. Please try again.';
                    console.error('Unexpected API response structure:', result);
                }
            } catch (error) {
                console.error('Error generating message:', error);
                generatedMessageOutput.value = 'Error generating message. Please check the console for details.';
            } finally {
                // Hide loading spinner and enable button
                buttonText.textContent = 'Generate Message';
                loadingSpinner.classList.add('hidden');
                document.getElementById('generateMessageBtn').disabled = false;
            }
        });

        // Copy message to clipboard functionality
        document.getElementById('copyMessageBtn').addEventListener('click', () => {
            const generatedMessage = document.getElementById('generatedMessage');
            generatedMessage.select();
            document.execCommand('copy');
            showCustomModal('Message copied to clipboard!');
        });
    </script>
</body>
</html>
